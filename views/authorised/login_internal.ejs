<!DOCTYPE html>
<html>
  <head>
    <%- include('../../template/partial/head', {username : username}); %>
  </head>
  <body>
    <header>
      <%- include('../../template/partial/header_auth'); %>
    </header>

    <header>
      <%- include('../../template/partial/header_auth_secondary'); %>
    </header>
    
    <div class="content secondary" style="flex-wrap: wrap;">
      <form action="/login_internal" method="POST" style="max-width: 300px; margin: auto;">
        <div class="form-group">
            <label for="username">Username</label>
            <input 
              type="text" 
              class="form-control" 
              id="username" 
              name="username"
              placeholder="Username" 
              value="<% if(username) %><%=username%><% %>"
            >
        </div>
        
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
        </div>
        <% 
          if (error){
            %>
              <p style="color:red"><%= error %></p>
            <% 
          }
        %>
        <br/>
        <button type="submit" class="btn btn-primary">Sign in</button>
      </form>
    </div>

    <footer>
      <%- include('../../template/partial/footer'); %>
    </footer>


    <%- include('../../template/partial/scripts'); %>
  </body>
</html>
